<Window x:Class="BigTree.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BigTree"
        mc:Ignorable="d"
        Title="BigTree" Height="650" Width="820" Loaded="Window_Loaded">
    <Grid Name="mainGrid">
        <Canvas x:Name="canvas1" Margin="5,5,5,85" Visibility="Visible" MouseMove="canvas_MouseMove"/>
        <Canvas x:Name="canvas2" Margin="5,5,5,85" Visibility="Hidden" MouseMove="canvas_MouseMove"/>

        <TextBox x:Name="quickPropertiesTextBox" Margin="10,0,10,42" TextWrapping="Wrap" Text="{Binding Path=QuickProperties}" Height="27" VerticalAlignment="Bottom" VerticalContentAlignment="Center" />

        <Label x:Name="iterationLabel" Content="Iteration:" HorizontalAlignment="Left" Margin="14,0,0,10" Width="58" Height="27" VerticalAlignment="Bottom"/>
        <TextBox x:Name="iterationTextBox" HorizontalAlignment="Left" Margin="72,0,0,10" TextWrapping="Wrap" Text="{Binding Path=Iteration}" Width="60" Height="27" VerticalAlignment="Bottom" VerticalContentAlignment="Center" />

        <Label x:Name="forceMaxLabel" Content="Force:" HorizontalAlignment="Left" Margin="132,0,0,10" Width="41" Height="27" VerticalAlignment="Bottom"/>
        <TextBox x:Name="forceMaxTextBox" HorizontalAlignment="Left" Margin="173,0,0,10" TextWrapping="Wrap" Text="{Binding Path=ForceMax}" Width="60" Height="27" VerticalAlignment="Bottom" VerticalContentAlignment="Center" />

        <Label x:Name="CalcTimeLabel" Content="Calc:" HorizontalAlignment="Left" Margin="238,0,0,10" Width="34" Height="27" VerticalAlignment="Bottom" RenderTransformOrigin="2.698,0.37"/>
        <TextBox x:Name="CalcTimeTextBox" HorizontalAlignment="Left" Margin="272,0,0,10" TextWrapping="Wrap" Text="{Binding Path=CalcTime}" Width="110" Height="27" VerticalAlignment="Bottom" VerticalContentAlignment="Center" />

        <Label x:Name="DrawTimeLabel" Content="Draw:" HorizontalAlignment="Left" Margin="387,0,0,10" Width="40" Height="27" VerticalAlignment="Bottom" RenderTransformOrigin="3.744,0.556"/>
        <TextBox x:Name="DrawTimeTextBox" HorizontalAlignment="Left" Margin="432,0,0,10" TextWrapping="Wrap" Text="{Binding Path=DrawTime}" Width="110" Height="27" VerticalAlignment="Bottom" VerticalContentAlignment="Center" />

        <Label x:Name="OffsetLabel" Content="Offset:" HorizontalAlignment="Left" Margin="547,0,0,10" Width="49" Height="27" VerticalAlignment="Bottom" RenderTransformOrigin="3.744,0.556"/>
        <TextBox x:Name="OffseXTextBox" HorizontalAlignment="Left" Margin="596,0,0,10" TextWrapping="Wrap" Text="{Binding Path=OffsetX}" Width="40" Height="27" VerticalAlignment="Bottom" VerticalContentAlignment="Center" />
        <TextBox x:Name="OffseYTextBox" HorizontalAlignment="Left" Margin="641,0,0,10" TextWrapping="Wrap" Text="{Binding Path=OffsetY}" Width="40" Height="27" VerticalAlignment="Bottom" VerticalContentAlignment="Center" />

        <Button x:Name="startButton" Content="{Binding Path=StartButtonText}" HorizontalAlignment="Right" Margin="0,0,10,10" Width="60" Click="startButton_Click" RenderTransformOrigin="0.96,0.531" Height="27" VerticalAlignment="Bottom"/>
    </Grid>
</Window>
